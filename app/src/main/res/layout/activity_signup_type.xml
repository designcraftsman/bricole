<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient"
    android:padding="16dp"
    >

    <!-- Logo -->
    <ImageView
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_dark"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/user_solid"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous êtes ?"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="26dp"/>
    </LinearLayout>

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Button 1: Employer -->
        <Button
            android:id="@+id/btnSignupEmployer"
            android:layout_width="180dp"
            android:layout_height="138dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/employer"
            android:gravity="center"
            android:minWidth="180dp"
            android:minHeight="48dp"
            android:padding="16dp"
            android:text="Employeur"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Button 2: Job Seeker -->
        <Button
            android:id="@+id/btnSignupJobSeeker"
            android:layout_width="180dp"
            android:layout_height="138dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/job_seeker"
            android:gravity="center"
            android:minWidth="180dp"
            android:minHeight="50dp"
            android:padding="16dp"
            android:text="À la recherche d’un travail"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Login Section -->
    <include layout="@layout/component_login_text"/>


</LinearLayout>
