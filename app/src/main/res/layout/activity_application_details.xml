<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Job Info -->
            <TextView
                android:id="@+id/txtPostedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Par Berenice"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Électricien – Installation et Réparation"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Casablanca"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:backgroundTint="@color/dark_gray"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background">

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Status : " />
                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:text="En Attente"/>
            </LinearLayout>
            <!-- Missions Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background">

                <TextView
                    android:id="@+id/txtMissionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="💅 Missions :"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtMission1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✔️ Installation de nouveaux câblages et prises électriques" />

                <TextView
                    android:id="@+id/txtMission2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✔️ Réparation de pannes et tests de sécurité" />

                <TextView
                    android:id="@+id/txtMission3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✔️ Vérification du bon fonctionnement des installations" />
            </LinearLayout>

            <!-- Description Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background">

                <TextView
                    android:id="@+id/txtDescriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="📰 Description du Poste :"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nous recherchons un électricien qualifié pour une mission de 2 jours afin d’installer et réparer des équipements électriques dans un appartement." />
            </LinearLayout>

            <!-- Compétences Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background">

                <TextView
                    android:id="@+id/txtSkillsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="🛠️ Compétences Requises :"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtSkill1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔷 Expérience en électricité résidentielle" />

                <TextView
                    android:id="@+id/txtSkill2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔷 Connaissance des normes de sécurité" />

                <TextView
                    android:id="@+id/txtSkill3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔷 Capacité à diagnostiquer et résoudre des problèmes électriques" />
            </LinearLayout>

            <!-- Contact Card -->
            <TextView
                android:id="@+id/txtContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:text="📞 Contact : 0652976002"
                android:textSize="16sp" />
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:text="Annuler Ma Candidature"
        android:textStyle="bold"
        android:backgroundTint="@color/orange" />

</RelativeLayout>
