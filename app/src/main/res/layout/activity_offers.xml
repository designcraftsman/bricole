<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
  >

        <!-- Search + Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:hint="Rechercher"
                android:drawableLeft="@drawable/search"
                android:background="@drawable/component_input"
                android:paddingStart="12dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/filter"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Filter Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@color/dark_gray"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brouillon"
                android:textColor="@color/dark_gray"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginStart="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complété"
                android:textColor="@color/dark_gray"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Table -->
        <TableLayout
            android:id="@+id/table_layout_offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#eeeeee">

            <!-- Table Header -->
            <TableRow android:background="@color/orange" android:padding="8dp">
                <TextView android:text="Titre de l'offre" android:textColor="@color/white" android:textStyle="bold" />
                <TextView android:text="Candidats" android:textColor="@color/white" android:textStyle="bold" />
                <TextView android:text="Actions" android:textColor="@color/white" android:textStyle="bold" />
            </TableRow>

            <!-- Table Row Example -->
            <TableRow android:padding="8dp"
                android:id="@+id/offers_row">

                <!-- Offer Title -->
                <TextView
                    android:id="@+id/offers_title"
                    android:text="Électricien - Installation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />

                <!-- Candidates Stats -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_border"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="3dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/offers_candidates_accepted_count" android:text="18" android:textSize="10sp" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"  android:text="Accepté" android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_border"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="3dp"
                        >
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/offers_candidates_pending_count"  android:text="10" android:textSize="10sp" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="En attente" android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_border"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="3dp"
                       >
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/offers_candidates_rejected_count" android:text="10" android:textSize="10sp" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rejeté" android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>



                <!-- Actions -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/more"
                    android:layout_gravity="center" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>
