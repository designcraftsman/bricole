<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp">

    <!-- Offer Title -->
    <TextView
        android:id="@+id/offers_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Électricien - Installation"
        android:textSize="12sp" />

    <!-- Candidates Stats -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_border"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">
            <TextView
                android:id="@+id/offers_candidates_accepted_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textSize="10sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accepté"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_border"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">
            <TextView
                android:id="@+id/offers_candidates_pending_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="10sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En attente"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_border"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">
            <TextView
                android:id="@+id/offers_candidates_rejected_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="10sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rejeté"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Actions -->
    <ImageView
        android:id="@+id/offers_more_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:src="@drawable/more" />
</TableRow>
