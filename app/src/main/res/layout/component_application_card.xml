<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        >

        <TextView
            android:id="@+id/postedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Par Berenice"
            android:textColor="#888888"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Électricien – Installation et Réparation"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/jobLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casablanca"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="2dp" />

        <!-- Optional Badge and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/badgeNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nouvelle Offre"
                android:textColor="#fff"
                android:backgroundTint="@color/orange"
                android:background="@drawable/rounded_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:visibility="gone"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/postTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Il y a 1 jour"
                android:textColor="#888888"
                android:textSize="12sp" />

        </LinearLayout>
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/orange"
            android:text="Annuler"
            android:textStyle="bold"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
